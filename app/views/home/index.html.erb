  <div class="container">
    <h1 id = "welcomeText">Welcome to Bug Overflow!</h1>
   </div>
 </div>

<div class="container-fluid">
 <% @bugs.each do |bug| %>
   <div class="col-lg">
      <h2><%= bug.title%></h2>
