<%= form_with(model: user, local: true, id: 'userForm') do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <strong><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</strong>
    
      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= form.label :fname , "First Name"%>
    <%= form.text_field :fname, id: :user_fname, class: "form-control"%>
    <div id="fnameError" class = "errorMsg"></div>
  </div>
    
  <div class="form-group">
    <%= form.label :lname, "Last Name" %>
    <%= form.text_field :lname, id: :user_lname, class: "form-control"%>
    <div id="lnameError" class = "errorMsg"></div>
  </div>
    
  <div class="form-group">
    <%= form.label :email, "Email" %>
    <%= form.text_field :email, id: :user_email, class: "form-control"%>
    <div id="emailError" class = "errorMsg">
    </div>
  </div>
    
  <div class="form-group">
    <%= form.label :thumbnail, "Profile Image" %>
    <%= form.file_field :thumbnail, id: :user_thumbnail, class: "form-control-file"%>
    <div id="thumbnailError" class = "errorMsg">
     </div>
  </div>
    
  <div class="actions">
    <%= form.submit data: {disable_with: false}  %>
    <%= link_to 'Cancel', users_path, class: "btn btn-danger" %>
  </div>
<% end %>